<fieldset>
  <legend>Tournament</legend>
  <div class="row">
    <%= f.input :tournament_name, wrapper_html: { class: "small-12 large-8 columns"} %>
    <%= f.input :location, wrapper_html: { class: "small-6 large-4 columns"} %>
    <%= f.input :division, collection: divisions, wrapper_html: { class: "small-3 large-2 columns"} %>
    <%= f.input :prelim_wins, wrapper_html: { class: "small-1 large-1 columns"}, label: "W" %>
    <%= f.input :prelim_losses, wrapper_html: { class: "small-1 large-1 columns"}, label: "L" %>
    <%= f.input :reached_outrounds, :as => :select, wrapper_html: { class: "small-4 large-2 columns" }, label: "Outrounds?" %>
    <%= f.input :outround_reached, collection: outrounds, wrapper_html: { class: "small-12 large-3 columns"}, label: "Latest outround reached" %>
    <%= f.hidden_field :_destroy %>
    <%= link_to '#', class: "remove_fields" do %>
      <i class="fa fa-times"></i>
    <% end %>
  </div>
</fieldset>