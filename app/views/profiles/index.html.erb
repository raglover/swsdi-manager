<div class="row">
  <h3>Current Users:</h3>
  <p>Number of Users: <%= @users.count %></p>
  <% @users.each do |user| %>
    <div class="small-12 large-12 columns">
      <div class="appbox">
        <div class="row">
          <div class="small-1 large-1 columns">
            <%= display_user_avatar(user) %>
          </div>
          <div class="small-3 large-3 columns">
            <h5><%= link_to "#{user.full_name}", profile_path(user)  %></h5>
          </div>
          <div class="small-1 large-1 small-offset-4 large-offset-4 columns">
            <i class="fa fa-graduation-cap has-tip" data-tooltip title="# of Applications"></i>: <%= user.camp_applications.count %>
          </div>
          <div class="small-1 large-1 columns">
            <i class="fa fa-calendar has-tip" data-tooltip title="Age"></i>: <%= user.age %>
          </div>
          <div class="small-2 large-2 columns">
            <i class="fa fa-university has-tip" data-tooltip title="Grade"></i>: <%= user.grade %>th
          </div>
          <div class="small-4 large-4 small-offset-8 large-offset-8 columns">
            <i class="fa fa-linux has-tip" data-tooltip title="Sprit Animal"></i>: <%= user.spirit_animal %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>