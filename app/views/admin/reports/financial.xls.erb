<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Financial Info">
    <Table>
      <Row>
        <Cell><Data ss:Type="String">Last Name</Data></Cell>
        <Cell><Data ss:Type="String">First Name</Data></Cell>
        <Cell><Data ss:Type="String">Total Owed</Data></Cell>
        <Cell><Data ss:Type="String">Paid</Data></Cell>
        <Cell><Data ss:Type="String">Financial Aid</Data></Cell>
        <Cell><Data ss:Type="String">Balance Owed</Data></Cell>
      </Row>
    <% @students.each do |student| %>
      <Row>
        <Cell><Data ss:Type="String"><%= student.user.first_name %></Data></Cell>
        <Cell><Data ss:Type="String"><%= student.user.last_name %></Data></Cell>
        <% tuition = CalculateTuition.new(student) %>
        <Cell><Data ss:Type="Number"><%= tuition.total_owed %></Data></Cell>
        <Cell><Data ss:Type="Number"><%= tuition.total_paid %></Data></Cell>
        <Cell><Data ss:Type="Number"><%= tuition.financial_aid %></Data></Cell>
        <Cell><Data ss:Type="Number"><%= tuition.current_balance %></Data></Cell>
      </Row>
    <% end %>
    <Row></Row>
    <Row>
      <Cell><Data ss:Type="String">Total Owed</Data></Cell>
      <Cell><Data ss:Type="Number"><%= @totals.total_owed %></Data></Cell>
      <Cell><Data ss:Type="String">Total Paid</Data></Cell>
      <Cell><Data ss:Type="Number"><%= @totals.total_paid %></Data></Cell>
      <Cell><Data ss:Type="String">Total Money</Data></Cell>
      <Cell><Data ss:Type="Number"><%= @totals.total_money_received %></Data></Cell>
      <Cell><Data ss:Type="String">Total Financial Aid</Data></Cell>
      <Cell><Data ss:Type="Number"><%= @totals.total_financial_aid %></Data></Cell>
      <Cell><Data ss:Type="String">Current Balance Due</Data></Cell>
      <Cell><Data ss:Type="Number"><%= @totals.total_owed - @totals.total_paid %></Data></Cell>
    </Row>
    </Table>
  </Worksheet>
</Workbook>