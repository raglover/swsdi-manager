<div id= "userpanel" class="small-12 large-8 columns" data-equalizer-watch >
    <div class="row">
      <div class="small-3 large-3 columns">
        <%= display_user_avatar(@user) %>
      </div>
      <div class="small-9 large-9 columns">  
        <h3><%= @user.first_name + " " + @user.last_name %></h2>
        <ul id="userinfo" class="inline-list">
          <li><i class="fa fa-comment-o has-tip" data-tooltip title="Prefers to be called"></i>: <%= !@user.nickname ? @user.first_name : @user.nickname %></li>
          <li><span class="has-tip" data-tooltip title="Gender"><i class="fa fa-female"></i><i class="fa fa-male"></i></span>: <%= @user.gender.capitalize %></li>
          <li><i class="fa fa-calendar has-tip" data-tooltip title="Grade in Fall"></i>: <%= @user.grade %>th Grade</li>
        </ul>
        <ul id="userinfo2" class="inline-list"> 
          <li><i class="fa fa-gift has-tip" data-tooltip title="Birthday!"></i>: <% if (!@user.birthday.nil?) %> <%= @user.birthday.strftime("%B %d, %Y") %> <% else %> None Listed<% end %></li>
          <li><i class="fa fa-text-height has-tip" data-tooltip title="T-shirt Size"></i>: <%= @user.tshirt_size.upcase %></li>
          <li><strong><i class="fa fa-linux has-tip" data-tooltip title="Spirit Animals are Awesome"></i></strong>: <% if @user.spirit_animal.blank? %>You're Boring!<% else %><%= @user.spirit_animal %>!<% end %></li>
        </ul>          
      </div> 
  </div>
  <div class="row">
    <div class="small-12 large-12 columns panel">
      <h6 class="small-4 large-4 columns">Application Status:</h6>
      <%= render 'statusicons', app: @camp_app %>
      <span class="small-4 large-4 columns"><%= link_to "Edit App", edit_admin_camp_app_path(@camp_app), class: "button tiny" %></span>
    </div>
  </div>
</div>