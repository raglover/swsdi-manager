<fieldset>
  <legend>User Information</legend>
  <div class="row">
    <div class="small-3 large-3 columns">
      <% if controller.action_name == "new" %>
        <%= image_tag 'fallback/default.png' %>
      <% else %>
        <%= image_tag(@profile.image_url(:thumb)) %>
      <% end %>
      <%= f.input :image, label: "Upload an Avatar Image" do %>
        <%= f.file_field :image %>
      <% end %>
      <%= f.input :remote_image_url, label: "Or add one from a URL" do %>
        <%= f.text_field :remote_image_url %>
      <% end %>
      <%= f.hidden_field :image_cache %>
    </div>
    <div class="small-9 large-9 columns">
      <div class="row">
        <div class="small-12 large-4 columns">
          <%= f.input :first_name do %>  
            <%= f.text_field :first_name, placeholder: "First Name" %>
          <% end %>
        </div>
        <div class="small-12 large-4 columns">
          <%= f.input :last_name do %>
            <%= f.text_field :last_name, placeholder: "Last Name" %>
          <% end %>
        </div>
        <div class="small-12 large-4 columns">
          <%= f.input :nickname do %>
            <%= f.text_field :nickname, placeholder: "Name you prefer to be called" %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="small-6 large-6 columns">
          <%= f.input :pronouns, label: "Preferred Pronouns" do %>
            <%= f.text_field :pronouns, placeholder: "e.g. 'She/Her', 'They/Them', 'He/Him'" %>
          <% end %>
        </div>
        <div class="small-6 large-6 columns">
          <%= f.input :school_affiliation do %>
            <%= f.text_field :school_affiliation, placeholder: "Your School Affiliation" %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 large-12 columns">
          <%= f.input :jobs, label: "Your Role/Event" do %>
            <%= f.select :jobs, collection: [["Speech", "Speech"], ["Policy","Policy"], ["Public Forum","Public Forum"], ["Lincoln Douglas","Lincoln Douglas"], ["Student Life Coordinator","Student Life Coordinator"], ["Administrator","Administrator"]] %>
          <% end %>
        </div>
      </div>
    </div>
</fieldset>