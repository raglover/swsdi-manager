<fieldset>
  <legend>Personal Information</legend>
  <div class="row">
    <div class="small-12 large-3 columns">
      <% if controller.action_name == "new" %>
        <%= f.label :admin_id %>
        <%= f.select :admin_id, options_from_collection_for_select(@admins, :id, :email) %>
      <% end %>
    </div>
    <div class="small-12 large-3 columns">
      <%= f.label :phone %>
      <%= f.text_field :phone, placeholder: "Phone Number" %>
    </div>
    <div class="small-12 large-6 columns">
      <%= f.label :birthday %>
      <%= date_select :admin_profile, :birthday, {default: @profile.birthday, start_year: 1950, end_year: 2005, order: [:month, :day, :year]}, {:class => "small-4 large-4 columns"} %>
    </div>
    <div class="small-12 large-12 columns">
      <%= f.label :address_line1, "Address" %>
      <%= f.text_field :address_line1, placeholder: "Address Line 1" %>
    </div>
    <div class="small-12 large-12 columns">
      <%= f.text_field :address_line2, placeholder: "Address Line 2" %>
    </div>
    <div class="small-6 large-6 columns">
      <%= f.text_field :city, placeholder: "City" %>
    </div>
    <div class="small-3 large-3 columns">
      <%= f.select :state, options_for_select(us_states, f.object.state || 'AL') %>
    </div>
    <div class="small-3 large-3 columns">
      <%= f.text_field :zip, placeholder: "Zip Code" %>
    </div>
    <div class="small-12 large-12 columns">
      <%= f.label :bio, "A Short Biography" %>
      <%= f.text_area :bio, placeholder: "Your Biography" %>
    </div>
  </div>
</fieldset>