<%= render 'admin/shared/admin_tools' %>
<div class="row">
  <h2>Staff List</h2>
  <% @admins.each do |admin| %>
  <div class="small-12 large-12 columns panel">
    <div class="small-1 large-1 columns">
      <%= display_admin_avatar(admin) %>
    </div>
    <div class="small-11 large-3 columns">
      <%= mail_to admin.admin.email, admin.full_name %>
    </div>
    <div class="small-4 large-4 columns">
      <i class="fa fa-phone" data-tooltip title="Phone Number"></i> <%= number_to_phone(admin.phone) %>
    </div>
    <div class="small-4 large-4 columns">
      <i class="fa fa-calendar" data-tooltip title="Age/Birthday"></i> <%= admin.age %> - <%= admin.birthday.strftime("%B %d") %>
    </div>
  </div>
  <% end %>
</div>