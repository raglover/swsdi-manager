<fieldset>
   <legend>Session</legend>
   <div class="row">
    <div class="small-6 large-3 columns">
     <%= f.label :name, "Session Name" %>
     <%= f.text_field :name, placeholder: "Session A" %>
    </div>
    <div class="small-3 large-2 columns">
      <%= f.label :shortname, "Short Name" %>
      <%= f.text_field :shortname, placeholder: "A" %>
    </div>
    <div class="small-6 large-3 columns">
      <%= f.label :session_start, "Session Start Date" %>
      <%= f.date_select :session_start, {order: [:month, :day, :year]}, {:class => "small-4 large-4 columns"} %>
    </div>
    <div class="small-6 large-3 columns">
      <%= f.label :session_end, "Session End Date" %>
      <%= f.date_select :session_end, {order: [:month, :day, :year]}, {:class => "small-4 large-4 columns"} %>
    </div>
    <div class="small-1 large-1 columns">
      <%= f.hidden_field :_destroy %>
      <%= link_to  "#", class: "remove-fields" do %>
        <i class="fa fa-times"></i>
      <% end %>
    </div>
   </div>
</fieldset>