<div class="row">
  <h1>Edit <%= @camp.name %></h1>
  <%= simple_form_for @camp, url: {action: "update"}, method: :put do |f| %>
    <%= f.error :base, class: "alert-box alert" %>

    <%= render 'campinfo', :f => f %>
    <%= f.fields_for :events do |builder| %>
      <%= render 'event_fields', f: builder  %>
    <% end %>
    <div class="row">
      <%= link_to_add_fields "Add Event", f, :events %>
    </div>
    <div class="row">
      <%= f.submit "Update Camp", class: "button primary small-6 large-6 columns" %>
    </div>
  <% end %>
</div>